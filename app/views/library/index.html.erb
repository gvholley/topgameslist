<h1>Library</h1>

<% if @library_games.exists? %>
<% @library_games.map(&:to_giant_bomb_game).each do |game| %>
    <div class="container">
      <p><%= game.name%></p>
      <p><%= game.id %></p>
      <p><%= game.deck %></p>

    </div>
  <% end %>
  <% else %>
  <div class="container">
    <div class="message-body">You haven't added any games to your library yet. <%= link_to 'Add some', root_path %>.</div>
  </div>
  <% end %>
